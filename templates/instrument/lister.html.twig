{% extends 'base.html.twig' %}
{% block body %}
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block javascripts %}{% endblock %}
		
		<h1>LISTE DES INSTRUMENTS</h1><a type="button" class="btn btn-success" href={{ path('app_instrument_ajouter') }}>Ajouter</a></br>
		<table width="60%" border="2" cellspacing="1" cellpadding="10">

        <thead>
        <tr>
            <th>Numéro de série</th>
            <th>Utilisation</th>
            <th>Couleur</th>
            <th>Marque</th>
            <th>Type d'Instrument</th>
            <th>Modifier</th>
        </tr>
    </thead>

		{% for i in iInstrument %}
		<tr>
			<td><a href="{{ path('app_instrument_consulter', { 'id': i.id }) }}">{{ i.numSerie }}</a></td>
            <td>{{ i.utilisation }}</td>
            <td>{{ i.couleur }}</td>
            <td>{{ i.marque.libelle }}</td>
            <td>{{ i.typeInstrument.libelle }}</td>
            <td>
				<a class="btn btn-primary" type="button" href={{ path('app_instrument_modifier', {'id': i.id}) }}>Modifier</a>
			</td>
        </tr>
	{% else %}
		<tr>
		<td>Aucun modèle n'a été trouvé.</td>
		</tr>
	{% endfor %}
    </table>
{% endblock %}