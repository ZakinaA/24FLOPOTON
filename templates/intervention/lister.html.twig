{% extends 'base.html.twig' %}

{% block body %}
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block javascripts %}{% endblock %}
		
		LISTE DES INTERVENTIONS</br>
		<table>
		{% for i in pInterventions %}
		<tr>
            <td>{{ i.id }}</td>
            <td>{{ i.professionnel.nom }}</td>
            {# <td>{{ i.instrument.libelle }}</td> #}
            <td>{{ i.dateDebut|date("m/d/Y") }}</td>
            <td>{{ i.dateFin|date("m/d/Y") }}</td>            
            <td>{{ i.descriptif }}</td>
            <td>{{ i.prix }}</td>
            <td>{{ i.quotite }}</td>
    <td><a href="{{ path('app_intervention_supprimer', { 'id': i.id }) }}" onclick="return  confirm('Êtes vous sur de vouloir supprimer cette intervention ?')">Supprimer</a></td>

	{% else %}
		<tr>
		<td>Aucune intervention n'a été trouvé.</td>
		</tr>
	{% endfor %}
        </table>
    </body>
{% endblock %}